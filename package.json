    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^6.3.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-react": "^7.26.1",
    "miniflare": "^1.4.1",
    "prettier": "^2.4.1",
    "rollup": "^2.58.0",
    "rollup-plugin-terser": "^7.0.2",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.4.4"
  }
