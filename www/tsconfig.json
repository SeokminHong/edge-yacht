{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "types": ["node"],

    /* Modules */
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "~components/*": ["src/components/*"],
      "~contexts/*": ["src/contexts/*"],
      "~hooks/*": ["src/hooks/*"],
      "~meshes/*": ["src/meshes/*"],
      "~utils/*": ["src/utils/*"],
      "~shared/*": ["../shared/*"]
    },

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "references": [{ "path": "../shared" }]
}
